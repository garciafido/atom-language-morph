name: 'Morph'
scopeName: 'source.morph'
type: 'tree-sitter'
parser: 'tree-sitter-morph'
fileTypes: ['morph']


firstLineRegex: [
  # shebang line
  '^#![ \\t]*/.*\\bmorph[\\d\\.]*\\b'

  # vim modeline
  'vim\\b.*\\bset\\b.*\\b(filetype|ft|syntax)=morph'
]

fileTypes: [
  'morph'
  'mor'
]

comments:
  start: '// '

folds: [
  {
    type: 'comment'
  }
  {
    start: {type: '(', index: 0}
    end: {type: ')', index: -1}
  },
  {
    start: {type: '[', index: 0}
    end: {type: ']', index: -1}
  },
  {
    start: {type: '{', index: 0}
    end: {type: '}', index: -1}
  }
]

scopes:
    'program': 'source.morph'

    'import > "from"': 'keyword.control'
    'import > "import"': 'keyword.control'
    'import > identifier': 'support.type'

    'node > "export"': 'keyword.control'
    'node > "abstract"': 'keyword.control'
    'node > "node"': 'storage.type.class'
    'node > identifier': 'support.type'
    'node > extends': 'keyword.control'

    'tree > "export"': 'keyword.control'
    'tree > "tree"': 'storage.type.class'
    'tree > identifier': 'support.type'

    'decorator > decorator_identifier': 'entity.name.function.decorator'

    'node_edge > identifier': 'support.storage.type'
    'node_edge > "!"': 'keyword.control'
    'node_edge > "[]"': 'keyword.control'
    'node_edge > "->"': 'storage.type.function'

    'type > "type"': 'storage.type.class'
    'type > identifier': 'support.type'
    'type > "="': 'keyword.control'

    'types > identifier': 'storage.type'
    'types > "|"': 'keyword.control'

    'function > "function"': 'storage.type.function'
    'function > identifier:nth-child(0)': 'support.type'
    'function > identifier:nth-child(1)': 'storage.type'
    'function > "=>"': 'entity.name.type.class'
    'function > ":"': 'keyword.control'

    'enum > "enum"': 'storage.type.class'
    'enum > identifier:nth-child(0)': 'support.type'
    'enum > identifier:nth-child(1)': 'storage.type'
    'enum > identifier:nth-child(2)': 'storage.type'
    'enum > ":"': 'keyword.control'

    'const > "const"': 'storage.modifier'
    'node > "export"': 'keyword.control'
    'const > identifier:nth-child(0)': 'support.type'
    'const > identifier:nth-child(1)': 'storage.type'
    'const > ":"': 'keyword.control'
    'const > "="': 'keyword.control'

    'morph > "morph"': 'storage.type.function'
    'morph > identifier': 'support.type'

    'morph_mutation > "new"': 'keyword.control'
    'morph_mutation > identifier': 'storage.type'
    'morph_mutation > ":"': 'keyword.control'

    'if_function > "if"': 'storage.type.function'
    'if_function > "=>"': 'entity.name.type.class'

    'comment': 'comment.block'

    'simple_string': 'string.quoted'
    'template_string': 'string.quoted.template'
    'ebnf_literal': 'string.quoted.template'
    '
    template_substitution > "${",
    template_substitution > "}"
    ': 'punctuation.section.embedded'
    'template_substitution': 'embedded.source'







